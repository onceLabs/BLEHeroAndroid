<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/help_fragment_header"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/help_page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_back" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/help_fragment_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/colorAccent"
                android:dividerPadding="2dp"
                android:orientation="vertical"
                android:paddingTop="0dp"
                android:paddingBottom="24dp"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/scanning_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:text="Scanning"
                        android:textAppearance="@style/settingsTableTitle"
                        android:textColor="@null" />

                    <com.oncelabs.blehero.ui.widgets.OLTableView
                        android:id="@+id/scanning_table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/scanning_overview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Overview" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/search_function"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Search Function" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/filtering"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Filtering" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sorting"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Sorting" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/favorites"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Favorites" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/filter_all_others"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Filter All Others" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ignoring_devices"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Ignoring Devices" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/locator_mode"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Locator Mode" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>
                    </com.oncelabs.blehero.ui.widgets.OLTableView>

                    <TextView
                        android:id="@+id/gatt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:text="GATT"
                        android:textAppearance="@style/settingsTableTitle"
                        android:textColor="@null" />

                    <com.oncelabs.blehero.ui.widgets.OLTableView
                        android:id="@+id/gatt_table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/gatt_profile"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="GATT Profile" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/reading"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Reading" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/writing"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Writing" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/notifications_indications"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Notifications/Indications" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/device_firmware_upgrade"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Device Firmware Upgrade" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>
                    </com.oncelabs.blehero.ui.widgets.OLTableView>

                    <TextView
                        android:id="@+id/logging_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:text="Logging"
                        android:textAppearance="@style/settingsTableTitle"
                        android:textColor="@null" />

                    <com.oncelabs.blehero.ui.widgets.OLTableView
                        android:id="@+id/logging_table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/logging_overview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Overview" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>
                    </com.oncelabs.blehero.ui.widgets.OLTableView>

                    <TextView
                        android:id="@+id/settings_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:text="GATT"
                        android:textAppearance="@style/settingsTableTitle"
                        android:textColor="@null" />

                    <com.oncelabs.blehero.ui.widgets.OLTableView
                        android:id="@+id/settings_table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/settings_overview"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                style="@style/settingsTableContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Overview" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_weight="1"
                                android:alpha="0.5"
                                android:scaleX="-1"
                                app:srcCompat="@drawable/ic_back" />
                        </LinearLayout>
                    </com.oncelabs.blehero.ui.widgets.OLTableView>


                    <ImageView
                        android:id="@+id/oncelabs_logo"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/oncelabs_logo" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Copyright Â© onceLabs LLC 2021"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>